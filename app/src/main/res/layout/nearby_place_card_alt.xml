<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="169dp"
    android:layout_marginEnd="18dp"
    app:cardCornerRadius="10.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/placePhotoAlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg"/>

        <View
            android:id="@+id/imageOverlayRes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_image_overlay"/>

        <TextView
            android:id="@+id/placeRatingAlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="4.5 / 5"
            android:fontFamily="@font/gothammedium"
            android:letterSpacing="-0.05"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingStart="18dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/placeNameAlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:lineSpacingExtra="2dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/gothammedium"
                android:text="Subway"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <!--<RatingBar
                android:id="@+id/topRestaurantRating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/white"
                android:progressBackgroundTint="@color/white"/> -->

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>